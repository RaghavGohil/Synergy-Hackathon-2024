<body>
    <header>
        <nav>
            <div class="navbar">
                <div class="nav-left">
                    <a href="/"><img src="/images/logo.png" alt="logo here" width="200px"></a>

                </div>
                <div class="nav-mid hideOnMobile">
                    <ul>
                        <li><a href="/">Home</a></li>
                        <li><a href="/projects">Projects</a></li>
                        <li><a href="/#about_us">About Us</a></li>
                        <li><a href="/#contact_sec">Contact</a></li>
                    </ul>
                </div>
                <div class="nav-right">
                    <div class="nav-rig hideOnMobile">
                        <div class="login-icon"></div>
                        {{#unless isLoggedIn}}
                            <a href="/register">Register</a>/
                            <a href="/signIn">Sign In</a>
                        {{/unless}}
                        {{#if isLoggedIn}}
                            <button class="profile-button">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-user-circle" width="56" height="56" viewBox="0 0 24 24" stroke-width="1.5" stroke="#ffffff" fill="none" stroke-linecap="round" stroke-linejoin="round">
